<mapper namespace="com.takoyakki.backend.domain.notification.repository.NotificationMapper">
    <!--    insertNotificationChallengeRankPointsToMentee-->
    <insert id="insertNotificationChallengeRankPointsToMentee" parameterType="NotificationChallengeToMenteeDto">
        INSERT INTO notification
        (
            member_id,
            type,
            title,
            contents,
            created_at
        )
        VALUES
        (
            #{memberId},
            'CHALLENGE',
            #{title},
            #{contents},
            NOW()
        );
    </insert>

