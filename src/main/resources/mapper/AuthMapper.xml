<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.takoyakki.backend.common.auth.mapper.AuthMapper">

        <resultMap id="loginResponseMap" type="LoginResponseDto">
            <result property="memberName" column="member_name" />
        </resultMap>

        <select id="selectStudentInfo" parameterType="java.lang.String">
            SELECT
                COUNT(*)
            FROM
                students
            WHERE
                phone_number = #{phoneNumber}
            AND
                student_name = #{memberName}
        </select>

        <insert id="signUp" parameterType="SignUpRequestDto">
            INSERT INTO members
                (
                    id,
                    member_name,
                    password,
                    phone_number,
                    nickname,
                    role
                )
            VALUES
                (
                    #{id},
                    #{memberName},
                    #{password},
                    #{phoneNumber},
                    #{nickname},
                    'TRAINEE'
                )
        </insert>

        <select id="selectUserInfo" parameterType="java.lang.String" resultMap="loginResponseMap">
            SELECT
                id,
                member_name,
                password,
                role
            FROM members
            WHERE id = #{id}
        </select>
    </mapper>